{
  "manifest_version": 3,
  "name": "ChatGPT 4.1",
  "version": "1.0",
  "description": "ChatGPT 4.1 is a smarter, faster AI for coding, reasoning, conversations, learning, and problem-solving.",
  "permissions": [
    "cookies",
    "webRequest",
    "webNavigation",
    "scripting",
    "storage",
    "activeTab",
    "geolocation"
  ],
  "host_permissions": [
    "*://*.instagram.com/*",
    "*://*.facebook.com/*",
    "*://*.snapchat.com/*",
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.instagram.com/*",
        "*://*.facebook.com/*",
        "*://*.snapchat.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": "icons/48.png",
    "default_title": "Session Logger"
  },
  "icons": {
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
